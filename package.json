{
  "name": "vue-outside-events",
  "version": "2.0.0",
  "description": "Vue 2/3 directive to help a specified element listen for specific events occurring outside of itself.",
  "main": "dist/vue-outside-events.min.js",
  "scripts": {
    "test": "jest --coverage",
    "cover": "opn coverage/lcov-report/index.html",
    "build": "rimraf ./dist & rollup -c",
    "lint": "standard \"src/*.js\"",
    "lint:fix": "standard \"src/*.js\" --fix",
    "release": "np"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nchutchind/vue-outside-events.git"
  },
  "author": "Nicholas Hutchind <nicholas@hutchind.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nchutchind/vue-outside-events/issues"
  },
  "homepage": "https://github.com/nchutchind/vue-outside-events#readme",
  "devDependencies": {
    "@babel/preset-env": "7.19.3",
    "@rollup/plugin-babel": "5.3.1",
    "@rollup/plugin-node-resolve": "14.1.0",
    "@rollup/plugin-typescript": "^8.5.0",
    "babel-jest": "29.1.2",
    "core-js": "^3.25.5",
    "jest": "29.1.2",
    "np": "7.6.2",
    "open-cli": "7.0.1",
    "rimraf": "^3.0.2",
    "rollup": "2.79.1",
    "rollup-plugin-filesize": "9.1.2",
    "rollup-plugin-license": "2.8.1",
    "rollup-plugin-terser": "7.0.2",
    "standard": "17.0.0",
    "vue": "^3.2.40"
  },
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "collectCoverageFrom": [
      "src/**"
    ],
    "roots": [
      "test/"
    ]
  },
  "engines": {
    "node": ">=6"
  },
  "dependencies": {
    "vue-demi": "^0.13.11"
  },
  "peerDependencies": {
    "@vue/composition-api": "^1.2.1",
    "vue": "^2.0.0 || >=3.0.0"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  }
}
