{
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "target": "es2017",
    "outDir": "dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "removeComments": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}